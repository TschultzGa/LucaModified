<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="?dialogPreferredPadding"
        android:paddingEnd="?dialogPreferredPadding"
        android:paddingBottom="@dimen/spacing_large">

        <TextView
            android:id="@+id/inputHeaderTextView"
            style="@style/MaterialAlertDialog.Luca.Title.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_default"
            android:maxLines="3"
            android:singleLine="false"
            android:text="@string/luca_connect_add_certificate_intro_title"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/inputDescriptionTextView"
            style="@style/MaterialAlertDialog.Luca.Body.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_default"
            android:text="@string/luca_connect_add_certificate_intro_description"
            app:layout_constraintTop_toBottomOf="@id/inputHeaderTextView" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/importImageButton"
            style="@style/Widget.Luca.Button.SecondaryActionButton"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/spacing_default"
            android:padding="@dimen/spacing_small"
            android:text="@string/luca_connect_add_certificate_intro_import_image_action"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputDescriptionTextView" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scanQrCodeButton"
            style="@style/Widget.Luca.Button.SecondaryActionButton"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/spacing_default"
            android:padding="@dimen/spacing_small"
            android:text="@string/luca_connect_add_certificate_intro_scan_qr_code_action"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/importImageButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>