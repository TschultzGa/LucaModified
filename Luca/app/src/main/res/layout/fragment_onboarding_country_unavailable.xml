<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_large"
    tools:context=".ui.onboarding.OnboardingActivity">

    <TextView
        android:id="@+id/countryUnavailableTitleTextView"
        style="@style/OnboardingTitleTextView"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/countryUnavailableSubTitleTextView"
        style="@style/OnboardingSubTitleTextView"
        android:text="@string/welcome_country_unavailable_title"
        app:layout_constraintTop_toBottomOf="@id/countryUnavailableTitleTextView"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/countryUnavailableDescriptionTextView"
        style="@style/TextAppearance.Luca.Body2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:text="@string/welcome_country_unavailable_description"
        app:layout_constraintTop_toBottomOf="@id/countryUnavailableSubTitleTextView" />

    <ImageView
        android:id="@+id/countryUnavailableImageView"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/spacing_large"
        android:scaleType="fitCenter"
        android:src="@drawable/g_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/countryUnavailableDescriptionTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>